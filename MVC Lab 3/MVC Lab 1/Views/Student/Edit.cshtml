@model CreateStudentVM
@{
    ViewData["Title"] = "Edit Student";
    SelectList deptsl = new SelectList(Model.Departments, "DeptId", "DeptName");

}

<h1>Edit</h1>

<form method="post">

    <input type="hidden" name="id" value="@Model.Student.Id" />

    <input type="hidden" asp-for="Student.Id" />
    <label asp-for="Student.Name">Name</label><input asp-for="Student.Name" class="form-control" />
    <label asp-for="Student.Age">Age</label><input asp-for="Student.Age" class="form-control" />
    <label asp-for="Student.Email">E-Mail</label> <input asp-for="Student.Email" class="form-control" /><span asp-validation-for="Student.Email"></span><br />

    <label asp-for="Student.DeptNo">Department</label><select asp-for="Student.DeptNo" asp-items="deptsl" class="form-select">

        <option>Select a Department</option>

    </select>


    <button asp-action="Edit" asp-controller="student" class="btn btn-warning">Update</button>
    <button asp-action="Delete" asp-controller="student" class="btn btn-danger">Delete</button>

</form>