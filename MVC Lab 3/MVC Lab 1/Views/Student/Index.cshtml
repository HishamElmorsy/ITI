@model List<Student>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>

            <th>Age</th>
            <th>E-Mail</th>
            <th>Department</th>

            <th>Action</th>


        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-center">
                    No students Found!
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>

                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Department.DeptName</td>
                    <td>
                        <a asp-action="details" asp-controller="student" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="edit" asp-controller="student" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>


                    </td>

                </tr>
            }
        }
    </tbody>
</table>
<a class="btn btn-success" asp-action="create" asp-controller="student">Add a student</a>