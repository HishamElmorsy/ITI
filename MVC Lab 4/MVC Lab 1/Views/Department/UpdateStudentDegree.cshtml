@model Department
@{
    ViewData["Title"] = "Update Student Degree";
    var degrees = ViewBag.degrees as Dictionary<int, int> ?? new Dictionary<int, int>();
}

<h2 class="mb-4 text-primary">Update Student Degrees in @ViewBag.crs.CrsName</h2>

<form method="post">
    <input type="hidden" name="crsid" value="@ViewBag.crs.Id" />

    @foreach (var student in Model.Students)
    {
        var degreeValue = degrees.ContainsKey(student.Id)
        ? degrees[student.Id].ToString()
        : "";

        <div class="mb-3">
            <label class="form-label fw-bold">@student.Name</label>
            <input type="text"
                   name="degree.@student.Id"
                   value="@degreeValue"
                   class="form-control"
                   placeholder="Enter degree" />
        </div>
    }

    <button type="submit" class="btn btn-warning">Update</button>
</form>
