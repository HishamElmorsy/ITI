@{
    ViewData["Title"] = "Error";
}

<div class="error-container">
    <div class="error-icon">
        ‚ö†Ô∏è
    </div>
    
    <h1 class="error-title">Oops! Something Went Wrong</h1>
    
    <div class="error-content">
        @if (ViewBag.Error != null)
        {
            <div class="error-message">
                <h2>Error Message</h2>
                <p>@ViewBag.Error</p>
            </div>
        }
        
        @if (ViewBag.ErrorDetails != null)
        {
            <div class="error-details">
                <h3>Technical Details</h3>
                <pre>@ViewBag.ErrorDetails</pre>
            </div>
        }
        
        <div class="error-suggestions">
            <h3>üí° Troubleshooting Tips</h3>
            <ul>
                <li>Ensure n8n is running and accessible</li>
                <li>Check that the workflow is activated in n8n</li>
                <li>Verify environment variables are configured correctly</li>
                <li>Confirm the n8n base URL in appsettings.json is correct</li>
                <li>Check that your OpenAI API key is valid</li>
            </ul>
        </div>
    </div>
    
    <div class="error-actions">
        <a href="@Url.Action("Ask", "Workflow")" class="btn btn-primary">
            <span class="btn-icon">üîÑ</span>
            Try Again
        </a>
    </div>
</div>

<style>
    .error-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 40px;
        text-align: center;
    }

    .error-icon {
        font-size: 5rem;
        animation: shake 0.5s ease-in-out;
    }

    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-10px); }
        75% { transform: translateX(10px); }
    }

    .error-title {
        font-size: 2rem;
        color: #d32f2f;
        margin: 20px 0;
        font-weight: 700;
    }

    .error-content {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin: 30px 0;
        text-align: left;
    }

    .error-message {
        margin-bottom: 25px;
        padding: 20px;
        background: #ffebee;
        border-left: 4px solid #d32f2f;
        border-radius: 8px;
    }

    .error-message h2 {
        margin-top: 0;
        color: #d32f2f;
        font-size: 1.3rem;
    }

    .error-message p {
        margin-bottom: 0;
        color: #c62828;
        font-size: 1.05rem;
    }

    .error-details {
        margin-bottom: 25px;
        padding: 20px;
        background: #f5f5f5;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
    }

    .error-details h3 {
        margin-top: 0;
        color: #666;
        font-size: 1.1rem;
    }

    .error-details pre {
        background: #fff;
        padding: 15px;
        border-radius: 6px;
        overflow-x: auto;
        color: #333;
        font-size: 0.9rem;
        border: 1px solid #ddd;
        margin: 0;
    }

    .error-suggestions {
        padding: 20px;
        background: #e3f2fd;
        border-left: 4px solid #1976d2;
        border-radius: 8px;
    }

    .error-suggestions h3 {
        margin-top: 0;
        color: #1976d2;
        font-size: 1.2rem;
    }

    .error-suggestions ul {
        margin: 10px 0 0 0;
        padding-left: 25px;
    }

    .error-suggestions li {
        margin: 8px 0;
        color: #0d47a1;
        line-height: 1.6;
    }

    .error-actions {
        margin-top: 30px;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 30px;
        font-size: 1.1rem;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
    }

    .btn-icon {
        font-size: 1.3rem;
    }
</style>
