{
  "Application": {
    "Name": "Smart AI Assistant",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "N8N": {
    "BaseUrl": "http://localhost:5678",
    "WebhookPath": "/webhook/ask",
    "RagWebhookPath": "/webhook/ask-rag",
    "TimeoutSeconds": 30
  },
  "Features": {
    "EnableAdvancedOptions": true,
    "MaxPromptLength": 4000,
    "DefaultLanguage": "en"
  }
}